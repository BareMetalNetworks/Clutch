#!/usr/bin/env ruby
require 'logger'
require 'rb-inotify'

$DBG = true

begin
	$DIR =  '/etc'
	start_time = Time.now
	events = 0


	hook = INotify::Notifier.new
	hook.watch($DIR, :create, :delete, :modify, :moved_from) do |event|
		next if event.nil?
		p "Event name: #{event.name} \n" if $DBG
		parser(event)
		events += 1
		end
	hook.run


rescue => err
	$logger.info "#{Time.now}: Error: #{err.inspect}"

end



# rescue => err
#	$logger.info "#{Time.now}: #{err.inspect} backtrace: #{err.backtrace}"
#end


#}

#dirHookEtc.Thread.join

#logHook.Thread.join


